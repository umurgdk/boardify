source 'https://rubygems.org'

gem 'rails', '4.2.4'
gem 'responders', '~> 2.0'

# Data
gem 'pg'
gem 'active_model_serializers'

# Frontend
gem 'sass-rails', '~> 5.0'
gem 'uglifier', '>= 1.3.0'
gem 'coffee-rails', '~> 4.1.0'
gem 'turbolinks'


gem 'jbuilder', '~> 2.0'
gem 'sdoc', '~> 0.4.0', group: :doc


